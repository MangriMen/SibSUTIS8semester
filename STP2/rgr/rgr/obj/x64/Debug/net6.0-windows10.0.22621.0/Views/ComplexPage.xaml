<Page x:ConnectionId='1'
    x:Class="rgr.Views.ComplexPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:rgr.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="24" />
                <RowDefinition Height="*" MaxHeight="96" />
                <RowDefinition Height="*" MaxHeight="64" />
                <RowDefinition Height="*" MinHeight="252" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock x:ConnectionId='3'
                Grid.Row="0"
                                                                        
                TextAlignment="Right" />

            <TextBlock x:ConnectionId='4'
                Grid.Row="1"
                MaxHeight="96"
                FontSize="36"
                FontWeight="SemiBold"
                                                            
                                                                       
                TextAlignment="Right" />

            <Grid
                Grid.Row="2"
                Padding="4,0,4,0"
                HorizontalAlignment="Stretch"
                ColumnSpacing="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="32" />
                </Grid.RowDefinitions>

                <controls:MemoryButton x:ConnectionId='29'
                    Grid.Column="0"
                    Action="Clear"
                                                                
                                                                                       />
                <controls:MemoryButton x:ConnectionId='30'
                    Grid.Column="1"
                    Action="Read"
                                                                
                                                                                       />
                <controls:MemoryButton x:ConnectionId='31'
                    Grid.Column="2"
                    Action="Add"
                                                                 />
                <controls:MemoryButton x:ConnectionId='32'
                    Grid.Column="3"
                    Action="Subtract"
                                                                 />
                <controls:MemoryButton x:ConnectionId='33'
                    Grid.Column="4"
                    Action="Store"
                                                                 />
            </Grid>

            <Grid
                Grid.Row="3"
                Padding="4"
                ColumnSpacing="2"
                RowSpacing="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <controls:CalculatorButton x:ConnectionId='5'
                    Grid.Row="0"
                    Grid.Column="0"
                                                                    
                                                                                    
                    Type="Module" />
                <controls:CalculatorButton x:ConnectionId='6'
                    Grid.Row="0"
                    Grid.Column="1"
                                                                    
                    Type="ClearEntry" />
                <controls:CalculatorButton x:ConnectionId='7'
                    Grid.Row="0"
                    Grid.Column="2"
                                                                    
                    Type="Clear" />
                <controls:CalculatorButton x:ConnectionId='8'
                    Grid.Row="0"
                    Grid.Column="3"
                                                                    
                    Type="Backspace" />
                <controls:CalculatorButton x:ConnectionId='9'
                    Grid.Row="1"
                    Grid.Column="0"
                                                                    
                                                                                    
                    Type="ComplexI" />
                <controls:CalculatorButton x:ConnectionId='10'
                    Grid.Row="1"
                    Grid.Column="1"
                                                                    
                                                                                    
                    Type="Sqr" />
                <controls:CalculatorButton x:ConnectionId='11'
                    Grid.Row="1"
                    Grid.Column="2"
                                                                    
                                                                                    
                    Type="Sqrt" />
                <controls:CalculatorButton x:ConnectionId='12'
                    Grid.Row="1"
                    Grid.Column="3"
                                                                    
                                                                                    
                    Type="Divide" />
                <controls:CalculatorButton x:ConnectionId='13'
                    Grid.Row="2"
                    Grid.Column="0"
                                                                    
                    Type="Seven" />
                <controls:CalculatorButton x:ConnectionId='14'
                    Grid.Row="2"
                    Grid.Column="1"
                                                                    
                    Type="Eight" />
                <controls:CalculatorButton x:ConnectionId='15'
                    Grid.Row="2"
                    Grid.Column="2"
                                                                    
                    Type="Nine" />
                <controls:CalculatorButton x:ConnectionId='16'
                    Grid.Row="2"
                    Grid.Column="3"
                                                                    
                                                                                    
                    Type="Multiply" />
                <controls:CalculatorButton x:ConnectionId='17'
                    Grid.Row="3"
                    Grid.Column="0"
                                                                    
                    Type="Four" />
                <controls:CalculatorButton x:ConnectionId='18'
                    Grid.Row="3"
                    Grid.Column="1"
                                                                    
                    Type="Five" />
                <controls:CalculatorButton x:ConnectionId='19'
                    Grid.Row="3"
                    Grid.Column="2"
                                                                    
                    Type="Six" />
                <controls:CalculatorButton x:ConnectionId='20'
                    Grid.Row="3"
                    Grid.Column="3"
                                                                    
                                                                                    
                    Type="Minus" />
                <controls:CalculatorButton x:ConnectionId='21'
                    Grid.Row="4"
                    Grid.Column="0"
                                                                    
                    Type="One" />
                <controls:CalculatorButton x:ConnectionId='22'
                    Grid.Row="4"
                    Grid.Column="1"
                                                                    
                    Type="Two" />
                <controls:CalculatorButton x:ConnectionId='23'
                    Grid.Row="4"
                    Grid.Column="2"
                                                                    
                    Type="Three" />
                <controls:CalculatorButton x:ConnectionId='24'
                    Grid.Row="4"
                    Grid.Column="3"
                                                                    
                                                                                    
                    Type="Plus" />
                <controls:CalculatorButton x:ConnectionId='25'
                    Grid.Row="5"
                    Grid.Column="0"
                                                                    
                                                                                    
                    Type="ChangeSign" />
                <controls:CalculatorButton x:ConnectionId='26'
                    Grid.Row="5"
                    Grid.Column="1"
                                                                    
                    Type="Zero" />
                <controls:CalculatorButton x:ConnectionId='27'
                    Grid.Row="5"
                    Grid.Column="2"
                                                                    
                                                                                    
                    Type="Delimiter" />
                <controls:CalculatorButton x:ConnectionId='28'
                    Grid.Row="5"
                    Grid.Column="3"
                                                                    
                    Type="Equal" />
            </Grid>
        </Grid>
    </Grid>
</Page>

