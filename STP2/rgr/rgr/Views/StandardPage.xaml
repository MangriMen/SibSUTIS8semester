<Page
    x:Class="rgr.Views.StandardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="MemoryButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style x:Key="CalcButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value=" Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value=" Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </Page.Resources>

    <Grid x:Name="ContentArea">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="32" />
                <RowDefinition Height="*" MaxHeight="170" />
                <RowDefinition Height="*" MaxHeight="64" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="{x:Bind ViewModel.Buffer, Mode=OneWay}"
                TextAlignment="Right"
                TextWrapping="Wrap" />

            <TextBlock
                Grid.Row="1"
                FontSize="76"
                FontWeight="SemiBold"
                Loaded="{x:Bind ViewModel.MainInput_Loaded}"
                Text="{x:Bind ViewModel.MainInput, Mode=OneWay}"
                TextAlignment="Right"
                TextWrapping="Wrap" />

            <Grid
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                ColumnSpacing="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Grid.Column="0" Style="{ThemeResource MemoryButton}">
                    MC
                </Button>
                <Button Grid.Column="1" Style="{ThemeResource MemoryButton}">
                    MR
                </Button>
                <Button Grid.Column="2" Style="{ThemeResource MemoryButton}">
                    M+
                </Button>
                <Button Grid.Column="3" Style="{ThemeResource MemoryButton}">
                    M-
                </Button>
                <Button Grid.Column="4" Style="{ThemeResource MemoryButton}">
                    MS
                </Button>
            </Grid>

            <Grid
                Grid.Row="3"
                ColumnSpacing="2"
                RowSpacing="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                    <RowDefinition Height="*" MinHeight="32" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    %
                </Button>
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Click="{x:Bind ViewModel.ClearAll}"
                    Style="{ThemeResource CalcButton}">
                    CE
                </Button>
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Click="{x:Bind ViewModel.ClearInput}"
                    Style="{ThemeResource CalcButton}">
                    C
                </Button>
                <Button
                    Grid.Row="0"
                    Grid.Column="3"
                    Click="{x:Bind ViewModel.EraseNumberFromInput}"
                    Style="{ThemeResource CalcButton}">
                    ⌫
                </Button>
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    1/x
                </Button>
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    x²
                </Button>
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    ²√x
                </Button>
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    ÷
                </Button>
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    7
                </Button>
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    8
                </Button>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    9
                </Button>
                <Button
                    Grid.Row="2"
                    Grid.Column="3"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    ×
                </Button>
                <Button
                    Grid.Row="3"
                    Grid.Column="0"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    4
                </Button>
                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    5
                </Button>
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    6
                </Button>
                <Button
                    Grid.Row="3"
                    Grid.Column="3"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    -
                </Button>
                <Button
                    Grid.Row="4"
                    Grid.Column="0"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    1
                </Button>
                <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    2
                </Button>
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    3
                </Button>
                <Button
                    Grid.Row="4"
                    Grid.Column="3"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    +
                </Button>
                <Button
                    Grid.Row="5"
                    Grid.Column="0"
                    Click="{x:Bind ViewModel.ToggleNegative}"
                    Style="{ThemeResource CalcButton}">
                    +/-
                </Button>
                <Button
                    Grid.Row="5"
                    Grid.Column="1"
                    Click="{x:Bind ViewModel.NumberButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    0
                </Button>
                <Button
                    Grid.Row="5"
                    Grid.Column="2"
                    Click="{x:Bind ViewModel.DelimeterButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    ,
                </Button>
                <Button
                    Grid.Row="5"
                    Grid.Column="3"
                    Click="{x:Bind ViewModel.OperationButtonClick}"
                    Style="{ThemeResource CalcButton}">
                    =
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
